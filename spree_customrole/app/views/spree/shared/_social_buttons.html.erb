<style>
#social_nav ul li {
padding : 0px
}
#social_nav {
  width: 400px !important;
  height: 40px !important;
}
</style>

<div id="social_nav" style = "background: blue;,width: 401px; , height: 40px;">
  
 <ul>
  <% if Spree::Config.facebook_button %>
      <li class="facebook" style = "width: 228px;">
        <%= render :partial => 'spree/social/facebook' %>
      </li>
    <% end %>
    
    <% if Spree::Config.twitter_button %>
      <li class="twitter">
        <%= render :partial => 'spree/social/twitter' %>
      </li>
    <% end %>
    <% if Spree::Config.gplus_button %>
      <li class="gplus">
        <%= render :partial => 'spree/social/gplus' %>
      </li>
    <% end %>
  </ul>
 
</div>
